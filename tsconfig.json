{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2021",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "build",
        "rootDirs": [
            "lib",
            "tests"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "*": [
                "lib/*"
            ]
        },
        "baseUrl": ".",
        "sourceMap": true
    },
    "include": [
        "lib/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}